<script>
    window.addEventListener('DOMContentLoaded', () => {
        const $elem = document.querySelector('.force-block')
        const $wrapper = $elem.querySelector('.wrapper')
        const $weHelp = document.querySelector('.we-help-block__img')
        document.addEventListener('scroll', () => {
            const posTop = $elem.getBoundingClientRect().top

            const offsetOrig = (posTop - window.innerHeight - 50) / 2
            const offset = offsetOrig > 0 ? 0 : offsetOrig

            const opacity = 1 + offset / 425
            if (opacity < -1 || offsetOrig > 300) {
                $weHelp.style.willChange = ''
                $elem.style.willChange = ''
            } else {
                 $weHelp.style.willChange = 'opacity'
                 $elem.style.willChange = 'top, height'
             }

            $weHelp.style.opacity = offset >= 0 ? 1 : (opacity < 0 ? 0 : opacity.toFixed(2))
            if (opacity > 0) {
                $elem.style.top = `${offset.toFixed(2)}px`
                const height = $wrapper.offsetHeight + offset
                $elem.style.height = `${height.toFixed(2)}px`
            }
        })
    })
</script>
